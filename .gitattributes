# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
vite.config.ts text eol=lf
vitest.config.ts text eol=lf
tsconfig*.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Lock files
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Exclude from diff
*.min.js -diff
*.min.css -diff
*.bundle.js -diff
*.chunk.js -diff

# Linguist overrides
src/i18n/* linguist-vendored
public/* linguist-vendored
